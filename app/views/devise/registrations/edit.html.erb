<div class="section">
  <div class="container is-centered">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="columns is-multiline">
          <div class="column is-12 is-offset-2">
            <h2 class="title">編輯個人資料</h2>

          </div>
          <div class="column is-4 is-offset-2">
            <div class="field">
              <%= f.label :username, "使用者代號", class:"label" %>
              <%= f.text_field :username, autofocus: true, class:"input" %>
            </div>
            <div class="field">
              <%= f.label :intro, "我的簡介", class:"label" %>
              <%= f.text_area :intro, class:"textarea", rows:11 %>
            </div>
          </div>
          <div class="column is-4">
            <div class="field">
              <%= f.label :email, "註冊信箱 (不可修改)", class:"label" %>
              <%= f.email_field :email, readonly: true, autocomplete: "email", class:"input" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <hr class="divider">
            <div class="field">
              <h3 class="title is-size-5">修改密碼</h3>
              <%= f.label :password, "新密碼 (如果不想改密碼就留白)", class:"label" %>
              <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
              <% if @minimum_password_length %>
                <br />
                <em>最小 <%= @minimum_password_length %> 個字元</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "確認新密碼", class:"label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
            </div>
            <div class="actions">
              <%= f.submit "更新", class:'button ' %>
              <%= link_to "回到上一頁", :back, class:'button has-text-primary-dark is-pulled-right' %>

            </div>
          </div>
        </div>

      <% end %>
      <div class="columns">
        <div class="column has-text-right is-offset-2 is-8">
          <hr class="divider">
          <%= button_to "刪除此帳號", registration_path(resource_name),class:"button has-text-danger-dark", data: { confirm: "Are you sure?" }, method: :delete %>
        </div>
        <div class="column is-2"></div>
      </div>


  </div>
</div>


