<div class="section">
  <div class="container columns is-centered">
    <div class="column is-4">
      <h2 class="title">編輯帳號 </h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "信箱", class:"label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, "密碼 (如果不想改密碼就留白)", class:"label" %>
          <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
          <% if @minimum_password_length %>
            <br />
            <em>最小 <%= @minimum_password_length %> 個字元</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "確認密碼", class:"label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
        </div>

        <div class="field">
          <%= f.label :current_password, "原本密碼", class:"label"  %>
          <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class:'button mr-4' %>
          <%= link_to "回到上一頁", :back, class:'button has-text-primary-dark' %>
          <%= button_to "刪除目前帳號", registration_path(resource_name),class:"button has-text-danger-dark", data: { confirm: "Are you sure?" }, method: :delete %>

        </div>
      <% end %>





    </div>
  </div>
</div>


