<div class="section">
  <div class="container columns is-centered">
    <div class="column is-4">
       <h2 class="title">登入網站</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "信箱" , class:"label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input" %>
        </div>

        <div class="field">
          <%= f.label :password, "密碼", class:"label"  %>
          <%= f.password_field :password, autocomplete: "current-password", class:"input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class:"checkbox" %>
            <%= f.label :remember_me, "記住帳號", class:"label" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "登入", class:"button" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>



    </div>
  </div>
</div>
